{
    "auto_install_extensions": {
        "ruff": true
    },
    "languages": {
        "Python": {
            "language_servers": ["pyright", "ruff"],
            "formatter": [
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ],
            "format_on_save": "off"
        }
    },
    "lsp": {
        "pyright": {
            "settings": {
                "python.analysis": {
                    "diagnosticMode": "workspace",
                    "typeCheckingMode": "standard",
                    "diagnosticSeverityOverrides": {
                        "reportMatchNotExhaustive": "error"
                    }
                }
            }
        }
    }
}
